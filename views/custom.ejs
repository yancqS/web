<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title><%= title %></title>
</head>
 
<body>
<div class="page">
 <% include ./component/top_inc.ejs %>
 <div class="content">
 	<div>
 		<form action='?' method='post' enctype='multipart/form-data'>
			标题:<input type='text' name='title'/></br>
			描述:<textarea name="description"></textarea></br>
			用户头像:<input type="file" name="src"/></br>
			<input type="submit" value="添加">
 		</form>
 	</div>
 	<table border="1" width="100%">
 		<thead>
 		  <tr>
 		  	<td>ID</td>
 		  	<td>标题</td>
 		  	<td>描述</td>
 		  	<td>头像</td>
 		  	<td>操作</td>
 		  </tr>	
 		</thead>
 		<tbody>
		  <% for(var i=0;i<evalution_data.length;i++){ %>
 		  <tr>
 			<td><%= evalution_data[i].ID %></td>
 		  	<td><%= evalution_data[i].title %></td>
 		  	<td><%= evalution_data[i].description %></td>
 		  	<td><img width="32" height="32" src='/upload/<%= evalution_data[i].src %>'/></td>
 		  	<td>
 		  	 <a href="?act=mod&id=<%= evalution_data[i].ID%>">修改</a>
 		  	 <hr/>
 		  	 <a href="?act=del&id=<%= evalution_data[i].ID%>" onclick="return confirm('确定删除吗？')">删除</a>
 		  	</td>
 		  </tr>
 		  <% } %>
 		</tbody>
 	</table>
 	
 	<% if(typeof mod_data != 'undefined'){ %>
 	<div>
 		<form action='?' method='post'>
 		    <input type='hidden' name='mod_id' value='<%= mod_data.ID %>' />
			标题:<input type='text' name='title' value='<%= mod_data.title %>' /></br>
			描述:<textarea name="description"><%= mod_data.description %></textarea></br>
			头像:<input type="file" name="src" /></br>
			<input type="submit" value="修改">
			<a href="/admin/custom">取消修改</a>
 		</form>
 	</div>
 	<% } %>
 	
 </div>	
</div>
</body>
</html>